<Page
    x:Class="DIM_Interaction.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DIM_Interaction"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ListView x:Name="itemList" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Image x:Name="typeImg1" Source="/Assets/res.jpg" ManipulationMode="All" HorizontalAlignment="Right" VerticalAlignment="Top"
               Height="280" Width="500"
               PointerPressed="touchImg_PointerPressed"
               PointerReleased="touchImg_PointerReleased"
               PointerExited="touchImg_PointerExited"
               PointerEntered="touchImg_PointerEntered"
               Tapped="touchImg_PointerTap"
               DoubleTapped="touchImg_PointerDoubleTapped"
               Holding="touchImg_PointerHolding"
               ManipulationDelta="touchImg_ManipulationDelta">
            <Image.RenderTransform>
                <TransformGroup>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image x:Name="typeImg2" HorizontalAlignment="Center" VerticalAlignment="Center"  Source="/Assets/res.jpg" 
               ManipulationMode="All" Height="280" Width="500"
               PointerPressed="touchImg_PointerPressed"
               PointerReleased="touchImg_PointerReleased"
               PointerExited="touchImg_PointerExited"
               PointerEntered="touchImg_PointerEntered"
               Tapped="touchImg_PointerTap"
               DoubleTapped="touchImg_PointerDoubleTapped"
               Holding="touchImg_PointerHolding"
               ManipulationDelta="touchImg_ManipulationDelta">
            <Image.RenderTransform>
                <TransformGroup>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image x:Name="typeImg3" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Source="/Assets/res.jpg" 
               ManipulationMode="All" Height="280" Width="500"
               PointerPressed="touchImg_PointerPressed"
               PointerReleased="touchImg_PointerReleased"
               PointerExited="touchImg_PointerExited"
               PointerEntered="touchImg_PointerEntered"
               Tapped="touchImg_PointerTap"
               DoubleTapped="touchImg_PointerDoubleTapped"
               Holding="touchImg_PointerHolding"
               ManipulationDelta="touchImg_ManipulationDelta">
            <Image.RenderTransform>
                <TransformGroup>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Button x:Name="newPuzzleBtn" Content="Start puzzle game" HorizontalAlignment="Center" VerticalAlignment="Top" 
                Height="50" Margin="0,0,0,0" Width="180" Click="NewPuzzleBtn_Click"/>

    </Grid>
</Page>
